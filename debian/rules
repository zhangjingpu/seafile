#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

searpc_dir := $(CURDIR)/libsearpc
ccnet_dir := $(CURDIR)/ccnet
destdir := $(CURDIR)/debian/seafile-client
install_prefix := $(destdir)/usr
seafile_pkg_config := $(install_prefix)/lib/pkgconfig
seafile_path := $(install_prefix)/bin

old_pkg_config_path := $(PKG_CONFIG_PATH)
old_path := $(PATH)

export PKG_CONFIG_PATH=$(seafile_pkg_config):$(old_pkg_config_path)
export PATH=$(seafile_path):$(old_path)

# Enable libappindicator if compile for ubuntu
ENABLE_APPINDICATOR := $(shell if lsb_release -a 2>/dev/null | grep -i ubuntu 2>/dev/null 1>&2; then \
	echo '--enable-appindicator'; \
else \
	echo; \
fi)

build-indep:
build-arch:
	dh_testdir
	mkdir -p $(install_prefix)

# Build libsearpc
	cd $(searpc_dir) \
	&& ./configure --prefix=/usr --disable-shared --disable-compile-demo $(shell dpkg-buildflags --export=configure) \
	&& make \
	&& make install DESTDIR=$(destdir)

# Fix the problem of DESTDIR and libtool
	sed -i -e "s;/usr/lib/libsearpc-json-glib;$(destdir)/usr/lib/libsearpc-json-glib;g" $(install_prefix)/lib/libsearpc.la

# Build ccnet
	cd $(ccnet_dir) \
	&& ./configure --prefix=/usr --disable-shared --disable-compile-demo $(shell dpkg-buildflags --export=configure) \
	&& make \
	&& make install DESTDIR=$(destdir)

	sed -i -e "s;/usr/lib/libsearpc;$(destdir)/usr/lib/libsearpc;g" $(install_prefix)/lib/libccnet.la

	./configure --prefix=/usr --disable-shared $(ENABLE_APPINDICATOR) $(shell dpkg-buildflags --export=configure) \
	&& make \
	&& make install DESTDIR=$(destdir)

# remove development files and unused files
	rm -rf $(install_prefix)/include
	rm -rf $(install_prefix)/lib/pkgconfig
	rm -rf $(install_prefix)/lib/*.a
	rm -rf $(install_prefix)/lib/*.la
	rm -f $(install_prefix)/bin/searpc-codegen.py
	rm -f $(install_prefix)/bin/ccnet-tool
	rm -f $(install_prefix)/bin/ccnet-init
	rm -f $(install_prefix)/bin/ccnet-servtool
	rm -f $(install_prefix)/bin/seafile

# remove .pyc/pyo files installed by py-compile of autoconf
	find $(install_prefix) -name \*.pyo -o -name \*.pyc | xargs rm -f

binary-indep:
binary-arch:
	dh_testroot
	dh_installchangelogs
	dh_installdocs
#	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
#	dh_installman
#	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

build: build-indep build-arch
binary: binary-indep binary-arch
clean:
	cd $(searpc_dir) && ([ ! -f Makefile ] || make distclean)
	cd $(ccnet_dir) && ([ ! -f Makefile ] || make distclean)
	[ ! -f Makefile ] || make distclean
	dh_clean

.PHONY: clean build build-indep build-arch binary binary-indep binary-arch